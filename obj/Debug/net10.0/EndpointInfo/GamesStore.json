        "additionalProperties": false
      },
      "CreatePromotionRequest": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "string",
            "format": "uuid"
          },
          "discountedPrice": {
            "type": "number",
            "format": "double"
          },
          "startsAt": {
            "type": "string",
            "format": "date-time"
          },
          "endsAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "CreateUserRequest": {
